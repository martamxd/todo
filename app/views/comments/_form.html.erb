
<%= form_with(model: [ @task, @task.comments.build ], local: true) do |form| %>
  <div class="form-group">
    <%= form.label  :Komentarz %><br>
    <%= form.text_area :body, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.submit 'Dodaj komentarz', :class => 'btn btn-success' %>
  </div>
<% end %>
