<div class="row">
	<div class="breadcrumb col"><%= link_to 'Wróć', tasks_path %></div>
</div>

<h1 class="display-4 mb-3">Zadanie</h1>
<div class="form-groip">
  <strong>Tytuł:</strong>
  <%= @task.title %>
</div>
 
<div class="form-group">
  <strong>Notatka:</strong>
  <%= @task.note %>
</div>

<%= link_to 'Edytuj', edit_task_path(@task), :class => "btn btn-success" %>
 
 <hr>

<div class="form-group">
	<h2 class="h2">Komentarze</h2>
	<ul class="list-group">
	<%= render @task.comments %>
	</ul>
</div>

<br>
<hr>

<h2 class="h2">Dodaj komentarz:</h2>
<%= render 'comments/form' %>
